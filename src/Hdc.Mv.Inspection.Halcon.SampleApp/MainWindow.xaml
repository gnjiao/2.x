                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_RegionTargetResults}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_DistanceBetweenLinesResults}"
