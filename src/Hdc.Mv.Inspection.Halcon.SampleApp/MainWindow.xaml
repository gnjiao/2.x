                                              CenterYPath="CenterY"
                                              RadiusPath="Radius"
                                              ColorName="green"
                                              LineWidth="4" />
                <hdc:CircleHalconViewerSeries ItemsSource="{Binding ResultsCircleIndicators}"
                                              CenterXPath="CenterX"
                                              CenterYPath="CenterY"
                                              RadiusPath="Radius"
                                              ColorName="red"
                                              LineWidth="4" />
                <hdc:RegionHalconViewerSeries ItemsSource="{Binding Regions}"
                                              RegionPath="Region"
                                              ColorName="red"
                                              LineWidth="4"
                                              RegionFillMode="Margin" />
                <hdc:XldHalconViewerSeries ItemsSource="{Binding XldIndicators}"
                                           XldPath="Xld"
                                           ColorName="red"
                                           LineWidth="4"
                                           RegionFillMode="Margin" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_ReferenceLines}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="green"
                                            LineWidth="2" />
                <!--                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_ReferenceLines}"-->
                <!--                                            StartPointXPath="StartPointX"-->
                <!--                                            StartPointYPath="StartPointY"-->
                <!--                                            EndPointXPath="EndPointX"-->
                <!--                                            EndPointYPath="EndPointY"-->
                <!--                                            ColorName="green"-->
                <!--                                            LineWidth="2" />-->
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_PointOfXldAndRadialLines}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="blue"
                                            LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_DistanceBetweenPointsOfXldAndRadialLines}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_CircleDiameter}"
