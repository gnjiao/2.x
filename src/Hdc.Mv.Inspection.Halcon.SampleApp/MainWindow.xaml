                                                    LineWidth="2" />
                <hdc:CircleHalconViewerSeries ItemsSource="{Binding ReferencePointUsingCircleIndicators}"
                                              CenterXPath="CenterX"
                                              CenterYPath="CenterY"
                                              RadiusPath="Radius"
                                              ColorName="blue"
                                              LineWidth="4" />

                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_DistanceBetweenTwoPointsResults}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="4" />
            </hdc:HalconViewer>
        </Grid>
    </DockPanel>
</Window>
