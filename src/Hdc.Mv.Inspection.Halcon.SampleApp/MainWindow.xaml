        <Grid Background="Silver">
            <hdc:HalconViewer  x:Name="HalconViewer">
                <hdc:RegionHalconViewerSeries ItemsSource="{Binding SurfaceDefects}"
                                              RegionPath="Region"
                                              ColorName="red"
                                              LineWidth="2" />
                <hdc:RegionHalconViewerSeries ItemsSource="{Binding HighlightDefects}"
                                              RegionPath="Region"
                                              ColorName="green"
                                              LineWidth="2" />
                <hdc:RoiRectangleHalconViewerSeries ItemsSource="{Binding RoiRectangleViewModels_CoordinateEdges}"
                                                    StartXPath="StartX"
                                                    StartYPath="StartY"
                                                    EndXPath="EndX"
                                                    EndYPath="EndY"
                                                    HalfWidthPath="HalfWidth"
                                                    ColorName="green"
                                                    LineWidth="2" />
                <hdc:RoiRectangleHalconViewerSeries ItemsSource="{Binding RoiRectangleViewModels_DataCodeSearching}"
                                                    StartXPath="StartX"
                                                    StartYPath="StartY"
                                                    EndXPath="EndX"
                                                    EndYPath="EndY"
                                                    HalfWidthPath="HalfWidth"
                                                    ColorName="green"
                                                    LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_CoordinateEdges}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="2" />
                <hdc:LineHalconViewerSeries ItemsSource="{Binding LineIndicators_Edges}"
                                            StartPointXPath="StartPointX"
                                            StartPointYPath="StartPointY"
                                            EndPointXPath="EndPointX"
                                            EndPointYPath="EndPointY"
                                            ColorName="red"
                                            LineWidth="2" />
