                <DockPanel DockPanel.Dock="Top"
                           Margin="4">
                    <TextBlock FontSize="20"
                               Margin="2"
                               DockPanel.Dock="Top">Measurement List</TextBlock>
                    <DataGrid ItemsSource="{Binding MeasurementInfos}"
                              DockPanel.Dock="Bottom"
                              SelectedItem="{Binding SelectedDefectInfo}"
                              x:Name="MeasurementListView"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="分组"
                                                Binding="{Binding GroupName, Mode=OneWay}"
                                                Width="60" />
                            <DataGridTextColumn Header="名称"
                                                Binding="{Binding DisplayName}"
                                                Width="100" />
                            <DataGridTextColumn Header="距离"
                                                Binding="{Binding ValueDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="偏差"
                                                Binding="{Binding DiffValueDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="目标"
                                                Binding="{Binding ExpectValueDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="X坐标"
                                                Binding="{Binding StartPointXDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="Y坐标"
                                                Binding="{Binding StartPointYDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="X偏差"
                                                Binding="{Binding EndPointXDisplayValue}"
                                                Width="60" />
                            <DataGridTextColumn Header="Y偏差"
                                                Binding="{Binding EndPointYDisplayValue}"
                                                Width="60" />
                        </DataGrid.Columns>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SelectMeasurementInfoCommand}"
                                                       CommandParameter="{Binding SelectedItem, ElementName=MeasurementInfosView}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </DataGrid>
                </DockPanel>

                <DockPanel DockPanel.Dock="Top"
                           Margin="4">
                    <TextBlock FontSize="20"
                               Margin="2"
                               DockPanel.Dock="Top">Defects List</TextBlock>
                    <DataGrid ItemsSource="{Binding DefectResults}"
                              DockPanel.Dock="Bottom"
                              SelectedItem="{Binding SelectedDefectInfo}"
                              x:Name="DefectsListView"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Index}"
                                                Header="NO"
                                                Width="30"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Location}"
                                                Header="Location"
                                                Width="30"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding X}"
                                                Header="X"
                                                Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Y}"
                                                Header="Y"
                                                Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Width}"
                                                Header="W"
                                                Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding Height}"
                                                Header="H"
                                                Width="50"></DataGridTextColumn>
                            <DataGridTextColumn Binding="{Binding defectArea}"
                                                Header="Area"
                                                Width="50"></DataGridTextColumn>
                        </DataGrid.Columns>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SelectDefectInfoCommand}"
                                                       CommandParameter="{Binding SelectedItem, ElementName=DefectsListView}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </DataGrid>
                </DockPanel>
            </UniformGrid>
