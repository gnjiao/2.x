<Window x:Class="MqTestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MqTestClient"
        mc:Ignorable="d"
        Title="MqTestClient" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <GroupBox Header="WpcInPosition" DockPanel.Dock="Left" Width="120" Margin="8">
                <StackPanel Orientation="Vertical">
                    <Button x:Name="WpcInPosition0Button" Margin="4" Click="WpcInPosition0Button_OnClick">Station-0,</Button>
                    <Button x:Name="WpcInPosition1Button"
                            Margin="4"
                            Click="WpcInPosition1Button_OnClick">
                        Station-1,
                    </Button>
                    <Button x:Name="WpcInPosition2Button"
                            Margin="4"
                            Click="WpcInPosition2Button_OnClick">
                        Station-2,
                    </Button>
                    <Button x:Name="WpcInPosition3Button"
                            Margin="4"
                            Click="WpcInPosition3Button_OnClick">
                        Station-3,
                    </Button>
                    <Button x:Name="WpcInPosition4Button"
                            Margin="4"
                            Click="WpcInPosition4Button_OnClick">
                        Station-4,
                    </Button>
                    <Button x:Name="WpcInPosition5Button"
                            Margin="4"
                            Click="WpcInPosition5Button_OnClick">
                        Station-5,
                    </Button>
                    <Button x:Name="WpcInPosition6Button"
                            Margin="4"
                            Click="WpcInPosition6Button_OnClick">
                        Station-6,
                    </Button>
                    <Button x:Name="WpcInPosition7Button"
                            Margin="4"
                            Click="WpcInPosition7Button_OnClick">
                        Station-7,
                    </Button>
                    <Button x:Name="WpcInPosition8Button"
                            Margin="4"
                            Click="WpcInPosition8Button_OnClick">
                        Station-8,
                    </Button>
                    <Button x:Name="WpcInPosition9Button"
                            Margin="4"
                            Click="WpcInPosition9Button_OnClick">
                        Station-9,
                    </Button>
                    <Button x:Name="WpcInPosition10Button"
                            Margin="4"
                            Click="WpcInPosition10Button_OnClick">
                        Station-10,
                    </Button>
                    <Button x:Name="WpcInPosition11Button"
                            Margin="4"
                            Click="WpcInPosition11Button_OnClick">
                        Station-11,
                    </Button>
                </StackPanel>
            </GroupBox>

            <UniformGrid Columns="4">
                <GroupBox Header="Watchdog"
                          DockPanel.Dock="Left"
                          Width="120"
                          Margin="8">
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>S99:</TextBlock>
                            <TextBox Width="60" Margin="4" x:Name="WatchdogTextBox" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="OpcTest"
                          DockPanel.Dock="Left"
                          Width="120"
                          Margin="8">
                    <StackPanel Orientation="Vertical">
                        <!--                        <StackPanel Orientation="Horizontal">-->
                        <!--                            <TextBlock>S99:</TextBlock>-->
                        <Button x:Name="OpcTestButton"

                                Margin="4" Click="OpcTestButton_OnClick">
                            Start
                        </Button>
                        <Button x:Name="OpcTestForLeftButton"

                                Margin="4"
                                Click="OpcTestForLeftButton_OnClick">
                            Left
                        </Button>
                        <Button x:Name="OpcTestForRightButton"

                                Margin="4"
                                Click="OpcTestForRightButton_OnClick">
                            Right
                        </Button>
                        <!--                        </StackPanel>-->
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="PrinterTest"
                          DockPanel.Dock="Left"
                          Width="120"
                          Margin="8">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="ForcePrintGo"
                                Margin="4" Click="ForcePrintGo_OnClick">
                            ForcePrintGo
                        </Button>
                        <Button x:Name="ForcePrintNg"
                                Margin="4" Click="ForcePrintNg_OnClick">
                            ForcePrintNg
                        </Button>
                    </StackPanel>
                </GroupBox>
            </UniformGrid>
        </DockPanel>
    </Grid>
</Window>